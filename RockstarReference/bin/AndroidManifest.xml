<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rockref.rockstarreference"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.rockref.rockstarreference.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rockref.rockstarreference.GuitarTunerActivity"
            android:label="@string/title_activity_guitar_tuner" >
        </activity>
        <activity
            android:name="com.rockref.rockstarreference.ChordChartActivity"
            android:label="@string/title_activity_chord_chart" >
        </activity>
        <activity
            android:name="com.rockref.rockstarreference.MetronomeActivity"
            android:label="@string/title_activity_metronome" >
        </activity>
        <activity
            android:name="com.rockref.rockstarreference.ExtrasActivity"
            android:label="@string/title_activity_extras" >
        </activity>
        <activity
            android:name="com.rockref.rockstarreference.ViewRockNewsActivity"
            android:label="@string/title_activity_view_rock_news" >
        </activity>
        <activity
            android:name="com.rockref.rockstarreference.ShopGuitarsActivity"
            android:label="@string/title_activity_shop_guitars" >
        </activity>
    </application>

</manifest>
